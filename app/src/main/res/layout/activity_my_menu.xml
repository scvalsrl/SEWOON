<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    tools:context=".MyMenu.MyMenuActivity">


    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:elevation="0dp">


        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            app:contentInsetStart="0dp">

            <TextView
                android:id="@+id/txv_toolbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/nanumsquare2"
                android:text="마이메뉴"
                android:textColor="#45555f"
                android:textSize="20sp" />


        </android.support.v7.widget.Toolbar>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.85dp"
            android:background="#000000" />

    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">


        <ImageView
            android:layout_marginTop="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/mymenu" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_marginTop="50dp"
                android:layout_width="300dp"
                android:layout_height="1dp"
                android:background="#49575a" />

            <TextView
                android:id="@+id/tolist"
                android:layout_marginTop="50dp"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nanumsquare"
                android:textColor="#49575a"
                android:text="회원 정보                                         >"
                android:textSize="20dp" />



            <TextView
                android:id="@+id/fromlist"
                android:layout_marginTop="30dp"
                android:layout_width="300dp"
                android:fontFamily="@font/nanumsquare"
                android:textColor="#49575a"
                android:layout_height="wrap_content"
                android:text="쪽지함                                              >"
                android:textSize="20dp" />

            <Button
                android:id="@+id/btn_logout"
                android:layout_marginTop="50dp"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:background="#b8a891"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:text="로그아웃" />


        </LinearLayout>


    </LinearLayout>
</LinearLayout>